                    @Html.EditorFor(model => model.Course.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "Only letters, must be 2-50 characters" } })
                    @Html.ValidationMessageFor(model => model.Course.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <strong style=color:red>*</strong>@Html.LabelFor(model => model.Course.Stream, htmlAttributes: new { @class = "control-label col-md-2", placeholder = "Only letters, must be 2-50 characters" })
